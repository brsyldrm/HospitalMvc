
@model IEnumerable<EntityLayer.Concrete.Datetime>

@{
    ViewBag.Title = "Doctor";
    Layout = "~/Views/Shared/Layout2.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <div class="row">
        <div class="col text-center">
            @Html.Action("Doctor1", "Home")
            <table class="d-flex justify-content-center mt-5">
                <tr>
                    <th>Hasta İsmi</th>
                    <th>Randevu Günü</th>
                    <th>Randevu Saati</th>
                </tr>
                @foreach (var item in Model)
                {
                    if (Convert.ToDateTime(@TempData["Bugün"]) > Convert.ToDateTime(@item.Time.ToString("dd/MM/yyyy HH:mm")))
                    {
                        <tr style="background-color:red">
                            <td>@item.Patient.PatientName</td>
                            <td>@item.Time.Date.ToString("dd/MM/yyyy")</td>
                            <td>@item.Time.Hour:@item.Time.Minute</td>
                        </tr>
                    }
                    else
                    {
                        <tr class="table-light">
                            <td>@item.Patient.PatientName</td>
                            <td>@item.Time.Date.ToString("dd/MM/yyyy")</td>
                            <td>@item.Time.Hour:@item.Time.Minute</td>
                        </tr>
                    }
                }
            </table>

        </div>
    </div>
</div>