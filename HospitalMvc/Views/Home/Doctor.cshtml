@model IEnumerable<EntityLayer.Concrete.Datetime>
@{
    ViewBag.Title = "Doctor";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col text-center">
            @Html.Action("Doctor1", "Home")
            <table class="d-flex justify-content-center mt-5">
                <tr>
                    <th>Hasta İsmi</th>
                    <th>Randevu Günü</th>
                    <th>Randevu Saati</th>
                </tr>
                @foreach (var item in Model)
                {
                    if (DateTime.Now.Date > @item.Time.Date)
                    {
                        if (DateTime.Now.Hour > @item.Time.Hour)
                        {
                            if (DateTime.Now.Minute > @item.Time.Minute)
                            {
                                x = "table-danger";
                            }
                        }

                    }
                    else { x = "table-light"; }
                    <tr>
                        <td>@item.Patient.PatientName</td>
                        <td>@item.Time.Date.ToString("dd/MM/yyyy")</td>
                        <td>@item.Time.Hour:@item.Time.Minute</td>
                    </tr>
                }
            </table>

        </div>
    </div>
</div>